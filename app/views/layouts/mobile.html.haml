!!! 5
%html{'xmlns:dubsar_og' => 'http://dubsar-dictionary.com/og/1.0'}
  %head
    %title
      = yield :title
    = favicon_link_tag
    = auto_discovery_link_tag :rss, '/rss_news.xml', :title => 'Dubsar News Feed'
    %link{:rel => "search", :type => "application/opensearchdescription+xml", :title => "Dubsar", :href => "/opensearch.xml"}
    != thumbnail_link_tag 'dubsar.png'
    != thumbnail_link_tag 'dubsar-full.png'
    %meta{:name => 'Description', :content => 'The Dubsar Project is an open-source dictionary application using content from the Princeton University WordNet® project. It has a rich mobile interface for smart phones, tablets and other mobile devices.'}
    %meta{:name => 'Keywords', :content => 'Dubsar, Dubsar Project, WordNet, thesaurus, dictionary, free dictionary, online dictionary, Ruby on Rails, jQuery, jQuery UI, PostgreSQL, QUnit, open-source, GPL, GitHub, English, mobile, iPhone, iPad, Android, tablet, smart phone'}
    %meta{:property => 'og:title', :content => 'Dubsar Mobile'}
    %meta{:property => 'og:type', :content => 'dubsar_og:feature'}
    %meta{:property => 'og:url', :content => 'http://dubsar-dictionary.com/m'}
    %meta{:property => 'og:image', :content => "#{image_path 'dubsar-big.jpg'}"}
    %meta{:property => 'og:site_name', :content => 'The Dubsar Project'}
    %meta{:property => 'fb:admins', :content => '1015821519'}
    %meta{:property => 'og:description', :content => 'The Dubsar Project is an open-source dictionary application using content from the Princeton University WordNet® project. It has a rich mobile interface for smart phones, tablets and other mobile devices.'}
    %meta{:property => 'og:email', :content => 'dubsar@dubsar-dictionary.com'}

    = csrf_meta_tag
    = stylesheet_link_tag 'mobile/ui-lightness/jquery-ui-1.8.14.custom'
    = stylesheet_link_tag 'mobile/jquery.mobile-1.0b1.min'
    = stylesheet_link_tag 'mobile/application'

  %body
    = yield

    = javascript_include_tag 'jquery-1.6.1.min'
    = javascript_include_tag 'jquery-ui-1.8.14.autocomplete.min'
    = javascript_include_tag 'jquery.mobile-1.0b1.min'
    = javascript_include_tag 'autocompleter'
