!!! 5
%html{'xmlns:dubsar_og' => 'http://dubsar-dictionary.com/og/1.0'}
  %head
    %title
      = yield :title
    = favicon_link_tag
    = auto_discovery_link_tag :rss, 'http://dubsar-dictionary.com/rss_news.xml', :title => 'Dubsar News Feed'
    %link{:rel => "search", :type => "application/opensearchdescription+xml", :title => "Dubsar", :href => "http://dubsar-dictionary.com/mobile-opensearch.xml"}
    != thumbnail_link_tag 'dubsar.png'
    != thumbnail_link_tag 'dubsar-full.png'
    = yield :description

    = csrf_meta_tag
    != stylesheet_link_merged :mobile
    = stylesheet_link_tag "http://code.jquery.com/mobile/latest/jquery.mobile.min.css"
    - # = stylesheet_link_tag "http://code.jquery.com/mobile/1.0b1/jquery.mobile-1.0b1.min.css"

  %body
    = yield

    != javascript_include_merged :mobile
    = javascript_include_tag "http://code.jquery.com/mobile/latest/jquery.mobile.min.js"
    - # / = javascript_include_tag "http://code.jquery.com/mobile/1.0b1/jquery.mobile-1.0b1.min.js"
