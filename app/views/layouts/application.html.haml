!!! 5
%html
  %head
    %title
      =yield :title
    =favicon_link_tag
    =auto_discovery_link_tag :rss, '/rss_news.xml', :title => 'Dubsar News Feed'
    %link{:rel => "search", :type => "application/opensearchdescription+xml", :title => "Dubsar", :href => "/opensearch.xml"}
    != stylesheet_link_merged :base
    = csrf_meta_tag
    =yield :description

  %body{:class => "style-#{@theme}"}
    #header.ui-widget
      %table.banner-container
        %tbody
          %tr
            %td
              %h2
                %a{:href => root_path, :class => "undecorated", :title => 'home'}
                  =image_tag 'dubsar.png', :alt => 'D', :id => 'dubsar-image', :height => "25", :width => "26"
                  Dubsar Project
            %td.header-link-cell
              .header-link-div.ui-corner-all.ui-state-default
                %a#tour-link.line.header-link.search-link{:href => tour_path, :title => 'take a tour'}
                  %span.ui-icon.ui-icon-flag
                  tour
            %td.header-link-cell
              .header-link-div.ui-corner-all.ui-state-default
                %a#mobile-link.line.header-link.search-link{:href => mobile_url, :title => 'Dubsar Mobile Edition'}
                  %span.ui-icon.ui-icon-signal
                  mobile
            %td.header-link-cell
              .header-link-div.ui-corner-all.ui-state-default
                %a#share-link.line.header-link{:href => '#', :title => 'Tell the people!'}
                  %span.ui-icon.ui-icon-comment
                  share
            %td.header-link-cell
              .header-link-div.ui-corner-all.ui-state-default
                %a#rss-link.line.header-link.search-link{:href => '/rss_news.xml', :title => 'RSS News Feed'}
                  %span.ui-icon.ui-icon-signal-diag
                  rss

      #share-dialog.template
      =render :partial => 'shared/theme_picker'
      =render :partial => 'shared/header_bar'
      %hr/
    =render :partial => 'shared/error'
    #main
      =yield
    =yield :pagination
    #footer.ui-widget
      =render :partial => 'shared/footer'

    != javascript_include_merged :base
