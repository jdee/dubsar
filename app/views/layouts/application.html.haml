%html
  %head
    %title
      =yield :title
    =favicon_link_tag
    =auto_discovery_link_tag :rss, '/rss_news.xml', :title => 'Dubsar News Feed'
    %link{:rel => "search", :type => "application/opensearchdescription+xml", :title => "Dubsar", :href => "/opensearch.xml"}
    != thumbnail_link_tags
    != stylesheet_link_merged :base
    =javascript_include_tag 'http://connect.facebook.net/en_US/all.js#xfbml=1'
    = csrf_meta_tag
    =yield :description
    %meta{:name => 'Keywords', :content => 'Dubsar, Dubsar Project, WordNet, thesaurus, dictionary, free dictionary, online dictionary, Ruby on Rails, jQuery, jQuery UI, PostgreSQL, QUnit, open-source, GPL, GitHub, Coral CDN, English'}

  %body{:class => "style-#{@theme}"}
    #header.ui-widget
      %h2
        %a{:href => root_path, :class => "undecorated", :title => 'home'}
          =image_tag 'dubsar.png', :alt => 'D', :id => 'dubsar-image'
          Dubsar Project
      #tour-link-div.ui-corner-all.ui-state-default{:style => 'position: fixed!important;'}
        %a#tour-link.search-link{:href => tour_path, :title => 'take a tour'}
          %span#tour-link-icon.ui-icon.ui-icon-flag
          tour

      %table#social-links
        %tbody
          %tr
            %td#delicious-link
              !=delicious_link
            %td#reddit-button
              !=reddit_button
            %td#su-link
              !=su_link
            %td#buzz-link
              !=buzz_link
            %td#tweet-link
              !=tweet_link
            %td#facebook-like-button
              !=facebook_like_button
      =render :partial => 'shared/theme_picker'
      =render :partial => 'shared/header_bar'
      %hr/
    =render :partial => 'shared/error'
    #main
      =yield
    =yield :pagination
    #footer.ui-widget
      =render :partial => 'shared/footer'

    != javascript_include_merged :base
    =javascript_include_tag 'http://www.google.com/buzz/api/button.js'
    =javascript_include_tag 'http://platform.twitter.com/widgets.js'
