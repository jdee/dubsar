- is_preview = defined?(with_info_button) && with_info_button

- class_list = "accordion-head"
- if !is_preview
  - class_list = "#{class_list} open"

%div{:class => class_list}
  - if defined?(with_info_button)
    = render partial: 'synsets/head', locals: { synset: synset, with_info_button: with_info_button }
  - else
    = render partial: 'synsets/head', locals: { synset: synset }
.accordion-body
  = render partial: 'synsets/body', locals: { synset: synset }
