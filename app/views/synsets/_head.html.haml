%span
  &= synset.gloss
%br/
%span{:title => 'lexical file name, a broad category associated with this word sense'}
  %em
    &= "<#{synset.lexname}>"
/- unless synset.marker.blank?
/  &nbsp;
/  %span{title: 'positional adjective marker'}
/    (#{synset.marker})
- unless synset.freq_cnt.zero?
  &nbsp;
  %span{:title => 'frequency count of this word sense in a reference text'}
    = "freq. cnt.: #{synset.freq_cnt.to_s :delimiter => ','}"
%br/
- synset.senses.sort_by{|s|s.word.name}.each do |sense|
  - if @sense == sense
    &= sense.word.name
  - else
    = link_to h(sense.word.name), sense, :class => 'search-link unstyled'
