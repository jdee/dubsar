  =form_for @fairy do |f|
    =hidden_field_tag :back, 'yes', :id => 'fairy_back'
    =f.label :name
    =f.text_field :name
    =f.label :email
    =f.text_field :email
    =f.label :phone_number
    =f.text_field :phone_number
    =f.submit
