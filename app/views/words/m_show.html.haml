%div{'data-role' => 'page', 'data-title' => "Dubsar Mobile - #{h(@word.name)} (#{@word.pos}.)", 'data-theme' => 'b'}
  %div{'data-role' => 'header', 'data-position' => 'inline'}
    = render :partial => 'shared/mobile_header'
    = link_to 'search results', @back, 'data-rel' => 'back', 'data-role' => 'button', 'data-icon' => 'arrow-u', :class => 'ui-btn-right'
    %br/
    ="#{@word.name} (#{@word.pos}.)"
    - unless @word.other_forms.empty?
      %em
        =" #{@word.other_forms}"
    %br/
    definitions (tap for more information)
  %div{'data-role' => 'content'}
    %ol{'data-role' => 'listview'}
      - @word.senses.each_with_index do |sense, index|
        %li
          = link_to sense.synset.gloss, url_for(:controller => :senses, :action => :m_show, :id => sense.id, :index => index), 'data-transition' => 'slideup'

  %div.ui-bar{'data-role' => 'footer'}
    = render :partial => 'shared/mobile_footer'
