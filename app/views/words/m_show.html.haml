%div{'data-role' => 'page', 'data-title' => "Dubsar Mobile - #{h(@word.name)} (#{@word.pos}.)", 'data-theme' => 'b'}
  %div{'data-role' => 'header', 'data-position' => 'inline', 'data-theme' => 'b'}
    = render :partial => 'shared/mobile_header'
    %br/
    ="#{@word.name} (#{@word.pos}.)"
    - unless @word.other_forms.empty?
      %em
        =" #{@word.other_forms}"
    %br/
    definitions (tap for more information)
  %div{'data-role' => 'content'}
    %ol{'data-role' => 'listview'}
      - @word.senses.each do |sense|
        %li
          = link_to url_for(:controller => :senses, :action => :m_show, :id => sense.id), 'data-transition' => 'slideup' do
            &= sense.synset.gloss
  %div.ui-bar{'data-role' => 'footer', 'data-theme' => 'b'}
    = render :partial => 'shared/mobile_footer'
