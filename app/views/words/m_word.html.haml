%div{'data-role' => 'page', 'data-title' => "Dubsar Mobile - #{h(@word.name)}"}
  %div{'data-role' => 'header', 'data-theme' => 'b', 'data-position' => 'inline'}
    = render :partial => 'dubsar_mobile_header'
    %br/
    ="#{@word.name} (#{@word.pos}.)"
    - unless @word.other_forms.empty?
      %em
        =" #{@word.other_forms}"
  %div{'data-role' => 'content'}
    %ol{'data-role' => 'listview', 'data-theme' => 'b'}
      - @word.senses.each_with_index do |sense, index|
        %li
          = link_to sense.synset.gloss, url_for(:action => :m_sense, :sense_id => sense.id, :index => index), 'data-transition' => 'slideup'

  %div{'data-role' => 'footer', 'data-theme' => 'b'}
    = render :partial => 'mobile_footer'
