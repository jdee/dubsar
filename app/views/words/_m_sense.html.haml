- word = m_sense.word
%div{'data-role' => 'page', :id => "#{word.unique_name}_#{index}"}
  %div{'data-role' => 'header'}
    %p
      =link_to 'Dubsar Mobile', m_path, :rel => 'external'
    %p
      ="#{word.name} (#{word.pos}.)"
      - unless word.other_forms.empty?
        %em
          =" #{word.other_forms}"
      %br/
      &nbsp;
      = "#{index.next}. #{m_sense.synset.gloss}"
  %div{'data-role' => 'content'}
    %h3
      &="<#{m_sense.synset.lexname}>"
      &nbsp;
      - if m_sense.marker
        = "(#{m_sense.marker})"
        &nbsp;
      - if m_sense.freq_cnt > 0
        &= "freq. cnt.: #{m_sense.freq_cnt.to_s :delimiter => ','}"
    - synonyms = m_sense.synset.words_except(word)
    - unless synonyms.empty?
      %h3 synonyms
      &nbsp;
      - synonyms.each do |synonym|
        != m_word_link synonym
    - unless m_sense.frames.empty?
      %h3 verb frames
      %ul
        - m_sense.frames.each do |frame|
          %li= frame
    - unless m_sense.synset.samples.blank?
      %h3 sample sentences
      %ul
        - m_sense.synset.samples.each do |sample|
          %li= sample
    - unless m_sense.pointers.blank?
      %h3 pointers
      %table
        %tbody
          - m_sense.unique_pointers.each do |ptype, words|
            %tr
              %td
                &= ptype
              %td
                - words.each do |word|
                  != m_word_link word

  %div{'data-role' => 'footer'}
    %p
      &copy; 2011 Jimmy Dee
      &middot;
      %a{:href => 'http://wordnet.princeton.edu', :title => 'WordNet&reg;', :rel => 'external'}
        WordNet&reg;
      &copy; 2011 The Trustees of Princeton University
