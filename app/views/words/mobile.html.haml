- content_for :title do
  Dubsar Mobile

%div{'data-role' => 'page', :id => '_mobile'}
  %div{'data-role' => 'header'}
    %p
      =link_to 'Dubsar Mobile', m_path, :rel => 'external'
  %div{'data-role' => 'content'}
    = render :partial => 'mobile_form', :locals => { :term => @term }
    - unless @words.blank?
      %ul
        - @words.each do |word|
          %li
            = link_to "#{word.name} (#{word.pos}.)", "##{word.unique_name}", 'data-transition' => 'slideup'
      = will_paginate @words
  %div{'data-role' => 'footer'}
    %p
      &copy; 2011 Jimmy Dee
      &middot;
      %a{:href => 'http://wordnet.princeton.edu', :title => 'WordNet&reg;', :rel => 'external'}
        WordNet&reg;
      &copy; 2011 The Trustees of Princeton University

= render :partial => 'm_word', :collection => @words, :locals => { :term => @term }
