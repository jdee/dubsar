%h2{:id => "#{word.unique_name}"}
  %a{:href => "##{word.unique_name}"}
    &= word.name
    %em
      &= "(#{word.pos}.)"
%div{:id => "pane_#{@count+=1}"}
  %em other forms:
  - if word.other_forms.length > 0
    &= word.other_forms
  - else
    (none)
  %ol
    =render :partial => 'sense', :collection => word.senses, :locals => { :word => word }
