%dt
  =h word.name
  %em
    =h "(#{word.part_of_speech})"
%dd
  %ol
    - word.definitions.each do |definition|
      %li
        =h definition.body
    - unless word.synonyms.blank?
      %li
        %strong synonyms:
        - word.synonyms.each do |synonym|
          =link_to synonym, url_for(:action => :show, :name => synonym)
