.ui-widget-content
  .line.ui-state-active.ui-corner-top
    %span.ui-icon.ui-icon-star
    %span
      &= word.name
      %em
        &= "(#{word.pos}.)"
  .ui-state-default.ui-corner-bottom
    %em other forms:
    - if word.other_forms.length > 0
      &= word.other_forms
    - else
      (none)
    %ol
      - word.senses.each do |sense|
        %li
          %span.tooltip.ui-corner-all
            = link_to sense, :class => 'search-link' do
              &= sense.synset.gloss
            = render :partial => 'tooltip', :locals => { :sense => sense }
          = render :partial => 'sense', :object => sense
