.ui-widget.ui-corner-all.view-container
  .line.ui-state-active.ui-corner-top.view-heading
    %span.ui-icon.ui-icon-document
    %span
      = link_to_unless_current 'Word:', word_path(word)
      &= word.name
      %em= "(#{word.pos}.)"
      - unless word.freq_cnt.zero?
        &nbsp;
        = "freq. cnt.: #{word.freq_cnt.to_s :delimiter => ','}"
  .ui-corner-bottom.view-content.ui-widget-content
    %em other forms:
    - if word.other_forms.length > 0
      &= word.other_forms
    - else
      (none)
    %ol
      - word.senses.each do |sense|
        %li
          = render :partial => 'sense', :object => sense
