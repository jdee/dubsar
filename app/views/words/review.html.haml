%table{:cols => "6"}
  %thead
    %tr
      %th word
      %th inflection
      %th word
      %th inflection
      %th word
      %th inflection
  %tbody
    - @inflections.each_with_index do |inflection, index|
      - break if index > 44
      %tr
        %td=link_to h(inflection.word.name_and_pos), inflection.word
        %td=h inflection.name
        - if @inflections.count >= index+45
          %td=link_to h(@inflections[index+45].word.name_and_pos), @inflections[index+45].word
          %td=h @inflections[index+45].name
        - if @inflections.count >= index+90
          %td=link_to h(@inflections[index+90].word.name_and_pos), @inflections[index+90].word
          %td=h @inflections[index+90].name

= will_paginate @inflections
